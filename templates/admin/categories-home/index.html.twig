{% extends 'baseAdmin.html.twig' %}

{% block title %}CategoriesHome index{% endblock %}

{% block body %}
    <h1>CategoriesHome index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Image</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categories_home in categories_homes %}
            <tr>
                <td>{{ categories_home.id }}</td>
                <td>{{ categories_home.titre }}</td>
                <td>{{ categories_home.image }}</td>
                <td>{{ categories_home.description }}</td>
                <td>
                    <a href="{{ path('app_admin_categories_home_show', {'id': categories_home.id}) }}">show</a>
                    <a href="{{ path('app_admin_categories_home_edit', {'id': categories_home.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_categories_home_new') }}">Create new</a>
{% endblock %}
