{% extends 'baseAdmin.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="card">
    <div class="card-body">
        <h1>Profil de : {{ user.nom }} {{ user.prenom }}</h1>
        <table class="table">
            <tbody>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Compte vérifié</th>
                    <td>{{ user.isVerified ? user.isVerified|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.nom }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ user.prenom }}</td>
                </tr>
                <tr>
                    <th>Téléphone</th>
                    <td>{{ user.telephone }}</td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ user.createdAt ? user.createdAt|date('d-m-Y') : '' }}</td>
                </tr>
                <tr>
                    <th>UpdatedAt</th>
                    <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>
        <a href="{{ path('app_admin_profile_edit', {'id': user.id}) }}">edit</a>
        <a href="{{ path('app_admin_profiles_index') }}">back to list</a>
        {{ include('admin/user/_delete_form.html.twig') }}
    </div>
</div>

{% endblock %}
