{% extends 'baseAdmin.html.twig' %}

{% block title %}Produits index{% endblock %}

{% block body %}
    <h1>Produits index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Imagename</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.titre }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.imagename }}</td>
                <td>
                    <a href="{{ path('app_admin_produits_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_admin_produits_edit', {'id': produit.id}) }}">edit</a>
                    <a href="{{ path('app_admin_commentaires_new', {'id': produit.id}) }}">ajouter un commentaire</a>
                     <a href="{{ path('app_admin_commentaires_show', {'id': produit.id}) }}">commentaire</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_produits_new') }}">Create new</a>


{% endblock %}
