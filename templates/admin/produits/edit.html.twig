{% extends 'baseAdmin.html.twig' %}

{% block title %}Modifier Produit{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Modifier Produit</h1>

    <div class="card">
        <div class="card-body">
            {{ include('admin/produits/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_admin_produits_index') }}" class="btn btn-secondary">Retour à la liste</a>

        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
            Supprimer
        </button>
    </div>

    <!-- Modal pour confirmation de suppression -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirmation de suppression</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Êtes-vous sûr de vouloir supprimer ce produit ?
                </div>
                <div class="modal-footer">
                    {{ include('admin/produits/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
