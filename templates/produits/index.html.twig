{% extends 'base.html.twig' %}

{% block title %}Hello ProduitsController!{% endblock %}

{% block body %}

 <h1>Produits index</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Titre</th>
                <th>image</th>
                <th>Description</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.titre }}</td>
                <td><img src="{{ asset('img/') ~ produit.imagename}}" class="card-img-top" alt="..." style="height: 100px; width: 100px;">
                <div class="card-body"></td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.imagename }}</td>
                <td>
                    <a href="{{ path('app_produits_show', {'id': produit.id}) }}">show</a>
                   
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    

{% endblock %}
