{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">Profil de : {{ user.nom }} {{ user.prenom }}</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ user.nom }}</td>
                    </tr>
                    <tr>
                        <th>Prenom</th>
                        <td>{{ user.prenom }}</td>
                    </tr>
                    <tr>
                        <th>Téléphone</th>
                        <td>{{ user.telephone }}</td>
                    </tr>
                    <tr>
                        <th>CreatedAt</th>
                        <td>{{ user.createdAt ? user.createdAt|date('d-m-Y') : '' }}</td>
                    </tr>
                    <tr>
                        <th>UpdatedAt</th>
                        <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>

            <a class="edit-link" href="{{ path('app_user_profile_edit', {'id': user.id}) }}">edit</a>
        </div>
    </div>
{% endblock %}
